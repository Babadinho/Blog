<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Posts</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
              <li class="breadcrumb-item active">All Posts</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">All Posts</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                {{> messages}}
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Post Title</th>
                  <th>Category</th>
                  <th>Image</th>
                  <th>Featured</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each posts}}
                <tr>
                    <td>{{this.postName}}</td>
                    <td>{{this.postCategory.categoryName}}</td>
                    <td><img src="/{{this.postImage}}" width="100" height="100" alt=""></td>
                    <td>{{this.allowFeatured}}</td>
                    <td>{{this.created_at}}</td>
                    <td><a href="/post/edit/{{this.id}}" class="btn btn-info btn-sm text-white">Edit</a>
                        <a href="/post/delete/{{this.id}}" class="btn btn-danger btn-sm text-white">Delete</a></td>
                </tr>
                {{/each}}
                </tbody>
                {{!-- <tfoot>
                <tr>
                  <th>Rendering engine</th>
                  <th>Browser</th>
                  <th>Platform(s)</th>
                  <th>CSS grade</th>
                </tr>
                </tfoot> --}}
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->


          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>