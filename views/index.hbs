    <div class="site-section">
      <div class="container bg-light container-color p-3">
        <div class="row mb-5">
          <div class="col-12">
            <h2 id="posts">Recent Posts</h2>
            <hr>
          </div>
        </div>
        <div class="row">
          {{#each posts}}
          <div class="col-lg-3 mb-4">
            <div class="entry2">
              <a href="/post/{{this._id}}"><img src="/{{this.postImage}}" alt="Image" class="img-fluid recent-image rounded"></a>
              <div class="excerpt">
                <div class="main-content">
                <span class="post-category text-white bg-primary head-content1">{{this.postCategory.categoryName}}</span>
              <h2 class="head-content2"><a href="single.html">{{this.postName}}</a></h2>
              </div>
              <div class="post-meta align-items-center text-left clearfix">
                <figure class="author-figure mb-0 mr-3 float-left"><img src="{{this.postAuthor.profileImage}}" alt="Image" class="img-fluid"></figure>
                <span class="d-inline-block mt-1">By <a href="#">{{this.postAuthor.firstName}} {{this.postAuthor.lastName}}</a></span>
                <span>{{formatDate this.created_at 'MMMM Do YYYY, h:mm a'}}</span>
              </div>
              
                <p>{{this.postContent}}</p>
                {{!-- <p><a href="/post/{{this._id}}">Read More</a></p> --}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        <div class="row text-center pt-5 border-top">
          <div class="col-md-12">
            {{> pagination}}
          </div>
        </div>
      </div>
    </div>

